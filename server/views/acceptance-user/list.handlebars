<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Acceptance User List
    <small>All users listed</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="{{{url 'dashboard.v1'}}}"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">List</li>
  </ol>
</section>
<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      {{#if message}}
        {{{message}}}
      {{/if}}
      <div class="box">
        <form action="{{{url 'acceptance_user.acceptance_update'}}}" method="post">
        <div class="box-header">
          <h3 class="box-title">All users</h3>
          <div class="box-tools">
            
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Acceptance</th>
            </tr>
            {{#each crud_user }}
              <tr>
                <td>
                  <a href="/crud/user/{{this.id}}">
                    {{this.id}}
                  </a>
                </td>
                <td>
                  <a href="/crud/user/{{this.id}}">
                    {{this.name}}
                  </a>
                </td>
                <td>
                   {{this.email}}
                </td>
                <td>
                  <input type="checkbox" name="acceptanceToggle[{{this.id}}]" {{this.acceptance}}>
                </td>
              </tr>
            {{/each}}
          </table>
        </div>

        <!-- /.box-body -->
      </div>
      <input type="submit" class="btn btn-primary" value="Save" style="position:fixed;bottom:50px;right:20px;width :150px;">
      </form>

      <!-- /.box -->
    </div>
    
  </div>
  <!-- /.row -->
</section>

